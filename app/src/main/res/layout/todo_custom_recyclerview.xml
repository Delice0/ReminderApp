<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/todo_custom_first_relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/todo_custom_duedate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="5dp"
            android:hint="2 days" />

    </RelativeLayout>


    <!-- Container for whole layout and to make the checkbox in right-center og parent -->
    <RelativeLayout
        android:id="@+id/todo_custom_second_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/todo_custom_duedate">

        <!-- Container for title and description -->
        <LinearLayout
            android:id="@+id/todo_custom_first_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/todo_custom_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="10"
                android:text="Title"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/todo_custom_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="18"
                android:text="description"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Container for priority and created -->
        <RelativeLayout
            android:id="@+id/todo_custom_container_priority_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/todo_custom_first_linearlayout">

            <TextView
                android:id="@+id/todo_custom_priority_simpletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority: " />

            <TextView
                android:id="@+id/todo_custom_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/todo_custom_priority_simpletext"
                android:layout_toEndOf="@id/todo_custom_priority_simpletext"
                android:text="5" />

            <TextView
                android:id="@+id/todo_custom_created_simpletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/todo_custom_priority_simpletext"
                android:text="Created: " />

            <TextView
                android:id="@+id/todo_custom_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/todo_custom_created_simpletext"
                android:layout_toEndOf="@id/todo_custom_created_simpletext"
                android:text="12-02-2020 18:22"
                android:textSize="14sp" />

        </RelativeLayout>

        <CheckBox
            android:id="@+id/todo_custom_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</LinearLayout>